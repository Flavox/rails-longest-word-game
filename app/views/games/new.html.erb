<div class='ms-4 mt-3'>
  <h1>New game</h1>

  <% @letters.each do |letter| %>
    <div class='border rounded d-inline bg-primary text-white p-1 mx-1'>
      <%= letter %>
    </div>
  <% end %>

  <div>
    <form action="/score" method="post" data-turbo="false" class='mt-3 input-group w-25 flex-nowrap border rounded'>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input class='form-control' type="text" name="word">
      <input class='input-group-text' type="submit" value="Play :)">
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>
</div>
